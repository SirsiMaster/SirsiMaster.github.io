{
  "rules": {
    "metrics": {
      ".read": true,
      ".write": "auth != null && auth.token.admin == true",
      "infrastructure": {
        ".read": true,
        ".write": "auth != null && auth.token.admin == true"
      },
      "kpis": {
        ".read": true,
        ".write": "auth != null && auth.token.admin == true"
      },
      "investor": {
        ".read": "auth != null",
        ".write": "auth != null && auth.token.admin == true"
      }
    },
    "liveUsers": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['status', 'lastSeen'])"
      }
    },
    "systemStatus": {
      ".read": true,
      ".write": "auth != null && auth.token.admin == true"
    },
    "alerts": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.admin == true",
      "$alertId": {
        ".validate": "newData.hasChildren(['message', 'severity', 'timestamp'])"
      }
    },
    "chat": {
      ".read": "auth != null",
      "$roomId": {
        "messages": {
          "$messageId": {
            ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
            ".validate": "newData.hasChildren(['userId', 'message', 'timestamp']) && newData.child('userId').val() === auth.uid"
          }
        },
        "metadata": {
          ".write": "auth != null && auth.token.admin == true"
        }
      }
    }
  }
}
