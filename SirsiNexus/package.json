{
  "name": "sirsinexus",
  "version": "1.0.0",
  "description": "SirsiNexus - Digital Startup & Investor Portal",
  "scripts": {
    "build-css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --minify",
    "watch-css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/tailwind.css --watch",
    "build": "npm run build-css",
    "start-websocket": "node websocket-server.js",
    "dev": "npm run watch-css & npm run start-websocket"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  },
  "keywords": [
    "dashboard",
    "admin",
    "investor",
    "portal",
    "websocket",
    "real-time"
  ],
  "author": "SirsiNexus Team",
  "license": "MIT"
}
